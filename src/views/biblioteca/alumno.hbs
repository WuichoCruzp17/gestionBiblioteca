<head>
    <title>Alumno</title>
    <script src="../biblioteca/js/alumno.js"></script>
</head>
<div class="container">
    <div class="page-header">
        <h1 class="all-tittles">Sistema bibliotecario <small>Administración de Alumnos</small></h1>
    </div>
</div>
<div class="container">
    <ul class="nav nav-tabs">
        <li class="active">
            <a data-toggle="tab" href="#newAlumno">Nuevo Alumno</a>
        </li>
        <li>
            <a data-toggle="tab" href="#alumnos">Alumnos</a>
        </li>
    </ul>
</div>
<div class="tab-content">
    <div id="newAlumno" class="tab-pane fade in active">
        <form autocomplete="off" id="alumnoForm">
            <div class="container-flat-form">
                <div class="title-flat-form title-flat-blue">
                    Nuevo Alumno.
                </div>
                <div class="row">
                    <div class="col-sm-3 hidden">
                        <div class="group-material">
                            <input type="text" class="tooltips-general material-control" name="alumnoId"
                                v-model="alumnoId" data-toggle="tooltip" data-placement="top" title
                                data-original-title="Alumno_id.">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Alumno_id</label>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="group-material">
                            <input type="text" class="tooltips-general material-control" required name="matricula"
                                v-model="matricula" minlength="13" data-toggle="tooltip" data-placement="top"
                                data-name="Matricula">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Matricula del alumno</label>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="group-material">
                            <input type="text" class="tooltips-general material-control" required name="nombre"
                                v-model="nombre" minlength="13" data-toggle="tooltip" data-placement="top"
                                data-name="Nombre">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Nombre del alumno</label>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="group-material">
                            <input type="text" class="tooltips-general material-control" required name="apellidoPaterno"
                                v-model="apellidoPaterno" minlength="13" data-toggle="tooltip" data-placement="top"
                                data-name="Apellido Paterno">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Apellido Paterno</label>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="group-material">
                            <input type="text" class="tooltips-general material-control" required name="apellidoMaterno"
                                v-model="apellidoMaterno" minlength="13" data-toggle="tooltip" data-placement="top"
                                data-name="Apellido Materno">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Apellido Materno</label>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="group-material">
                            <select class="tooltips-general material-control" name="grado" v-model="grado"
                                data-toggle="tooltip" data-placement="top" data-toggle="tooltip" data-placement="top"
                                required data-original-title="Grado del Alumno" data-name="Grado del Alumno">
                                <option value="0" disabled="" selected="">Selecciona un Grado</option>
                                {{#each gradoListo}}
                                <option value="{{catalagoParametroId}}">{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="group-material">
                            <select class="tooltips-general material-control" name="grupo" v-model="grupo"
                                data-toggle="tooltip" data-placement="top" data-toggle="tooltip" data-placement="top"
                                required data-original-title="Grupo del Alumno" data-name="Grupo del Alumno">
                                <option value="0" disabled="" selected="">Selecciona un Grupo</option>
                                {{#each grupoList}}
                                <option value="{{catalagoParametroId}}">{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="group-material">
                            <select class="tooltips-general material-control" name="mobilidad" v-model="mobilidad"
                                data-toggle="tooltip" data-placement="top" data-toggle="tooltip" data-placement="top"
                                required data-original-title="Mobilidad del Alumno" data-name="Mobilidad del Alumno">
                                <option value="0" disabled="" selected="">Selecciona la Mobilidad</option>
                                {{#each mobilidadList}}
                                <option value="{{catalagoParametroId}}">{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="group-material">
                            <select class="tooltips-general material-control" name="turno" v-model="turno"
                                data-toggle="tooltip" data-placement="top" data-toggle="tooltip" data-placement="top"
                                required data-original-title="Turno del Alumno" data-name="Turno del Alumno">
                                <option value="0" disabled="" selected="">Selecciona el Turno</option>
                                {{#each turnoList}}
                                <option value="{{catalagoParametroId}}">{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4 hidden">
                        <div class="group-material">
                            <span>Estatus</span>
                            <select class="tooltips-general material-control" name="estatusId" v-model="estatusId"
                                data-toggle="tooltip" data-placement="top" data-toggle="tooltip" data-placement="top"
                                required data-original-title="Estatus del Libro">
                                {{!-- <option value="" disabled="" selected="">Selecciona una categoría</option> --}}
                                {{#each activoInactivo}}
                                <option value="{{catalagoParametroId}}">{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4 hidden">
                        <div class="group-material">
                            <span>Eliminado</span>
                            <select class="tooltips-general material-control" name="eliminadoId" v-model="eliminadoId"
                                data-toggle="tooltip" data-placement="top" data-toggle="tooltip" data-placement="top"
                                required data-original-title="Elige la categoría del libro">
                                {{!-- <option value="" disabled="" selected="">Selecciona una categoría</option> --}}
                                {{#each eliminadoList}}
                                <option value="{{catalagoParametroId}}">{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4 hidden">
                        <div class="group-material">
                            <span>Fecha Creación</span>
                            <input type="text" name="fechaCreacion" v-model="fechaCreacion" class="material-control">
                        </div>
                    </div>
                    <div class="col-sm-4 hidden">
                        <div class="group-material">
                            <span>Usuario Creo</span>
                            <input type="text" name="usuarioCreao" v-model="usuarioCreo" class="material-control">
                        </div>
                    </div>
                    <div class="col-sm-4 hidden">
                        <div class="group-material">
                            <span>Fecha Modifico</span>
                            <input type="text" name="fechaModifico" v-model="fechaModifico" class="material-control">
                        </div>
                    </div>
                    <div class="col-sm-4 hidden">
                        <div class="group-material">
                            <span>Usuario Modifico</span>
                            <input type="text" name="usuarioModifico" v-model="usuarioModifico"
                                class="material-control">
                        </div>
                    </div>
                </div>
                <p class="text-center">
                    <button type="reset" class="btn btn-info" style="margin-right: 20px;"><i
                            class="zmdi zmdi-roller"></i>
                        &nbsp;&nbsp; Limpiar</button>
                    <button type="button" class="btn btn-primary" id="btnSave"><i class="zmdi zmdi-floppy"></i>
                        &nbsp;&nbsp; Guardar</button>
                </p>
            </div>
        </form>
    </div>
    <div id="alumnos" class="tab-pane fade">
        <div class="container-flat-form">
            <div class="title-flat-form title-flat-blue">
                Alumnos.
            </div>
            <div id="card">
                <div class="container-fluid">
                    <form id="search" style="margin-bottom:5px">
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="group-material">
                                    <input type="text" class="tooltips-general material-control"
                                        name="filtroPerzonalisado" v-model="searchQuery" data-toggle="tooltip"
                                        data-placement="top" data-name="" id="filtro_personalizado">
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    <label>Filtro personalizado</label>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="group-material">
                                    <select class="tooltips-general material-control" name="grado" id="filtro_grado"
                                        data-toggle="tooltip" data-placement="top" data-toggle="tooltip"
                                        data-placement="top" required data-original-title="Grado del Alumno"
                                        data-name="Grado del Alumno">
                                        <option value="0"  selected="">Selecciona un Grado</option>
                                        {{#each gradoListo}}
                                        <option value="{{catalagoParametroId}}">{{nombre}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="group-material">
                                    <select class="tooltips-general material-control" name="grupo" id="filtro_grupo"
                                        data-toggle="tooltip" data-placement="top" data-toggle="tooltip"
                                        data-placement="top" required data-original-title="Grupo del Alumno"
                                        data-name="Grupo del Alumno">
                                        <option value="0"  selected="">Selecciona un Grupo</option>
                                        {{#each grupoList}}
                                        <option value="{{catalagoParametroId}}">{{nombre}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="group-material">
                                    <select class="tooltips-general material-control" name="mobilidad"
                                         data-toggle="tooltip" data-placement="top" id="filtro_mobilidad"
                                        data-toggle="tooltip" data-placement="top" required
                                        data-original-title="Mobilidad del Alumno" data-name="Mobilidad del Alumno">
                                        <option value="0"  selected="">Selecciona la Mobilidad</option>
                                        {{#each mobilidadList}}
                                        <option value="{{catalagoParametroId}}">{{nombre}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="group-material">
                                    <select class="tooltips-general material-control" name="turno" data-name="Turno"
                                        data-toggle="tooltip" data-placement="top" data-toggle="tooltip" 
                                        data-placement="top" data-original-title="Elige el Turno" id="filtro_turno">
                                        <option value="0" selected="">Selecciona un Turno</option>
                                        {{#each turnoList}}
                                        <option value="{{catalagoParametroId}}">{{nombre}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>


                    </form>
                </div>

                <div class="row custom-scroll-containers" style="height: 800px;">
                    <demo-card :heroes="cardData" :columns="cardColumns" :filter-key="searchQuery">
                    </demo-card>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/x-template" id="card-template">

    <div class="" >
        <div class="col-sm-4 col-sm-12" v-for="entry in filteredHeroes">
                    <div class="card card-default">
                        <div class="card-header">\{{entry['matricula']}}</div>

                        <div class="card-body">
                            <h4>Nombre: \{{entry['nombre']}}</h4>
                            <h4>Grupo: \{{entry['grado']}} \{{entry['grupo']}}</h4>
                            <p>Turno:  \{{entry['turno']}}</p>
                            <p>Mobilidad: \{{entry['mobilidad']}}</p>
                            <p><button class="btn btn-primary btn-block" v-on:click='findById(entry["alumnoId"])'>Editar</button></p>
                            <p><button class="btn btn-danger btn-block"  v-on:click='prepateToRemove(entry["alumnoId"])'>Eliminar</button></p>
                        </div>
                    </div>

                </div>
          
        </script>